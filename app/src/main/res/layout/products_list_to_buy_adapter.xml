<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="@drawable/background_of_images"
    android:id="@+id/productsListToBuyAdapterLayout">

    <Button
        android:id="@+id/add_to_buy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="7dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/price_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_marginTop="2dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/logo_foodie" />

    <TextView
        android:id="@+id/product_txt"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Opis"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/price_txt"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Cena"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_txt"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>